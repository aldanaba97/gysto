

@{
    ViewBag.Title = "Login";
  

}


@using (Html.BeginForm()) 
{
    <h1>@ViewBag.Error</h1>
    @Html.AntiForgeryToken()
    <div class="contenedor">
        
    <div class="form-horizontal">
        <br />
        <br />
        <h2>Login</h2>
        <h4>Iniciar Sesion </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("nombre ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("nombreUsuario", new { htmlAttributes = new { @class = "form-control" } })
                
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Contraseña", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("contraseña", new { htmlAttributes = new { @class = "form-control" } })
                
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Acceder" class="btn btn-default" />
            </div>
        </div>
    </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
