@model Gysto.Models.Usuario

@{
    ViewBag.Title = "Login";


}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

<div class="contenedor">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <h1>@ViewBag.Error</h1>
                    @Html.AntiForgeryToken()
           

                    <div class="form-horizontal" align="center">
                        <br />
                        <br />

                        <h3>INICIAR SESION </h3>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.Label("Nombre ", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.Editor("nombreUsuario", new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Contraseña", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.PasswordFor(model => model.contraseña, htmlAttributes: new { @class = "form-control", @id = "txtPassword" })

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Acceder" class="btn btn-dark" />
                            </div>
                        </div>
                        <div class=" form-group">
                            <div class="col-md-10">
                                <a href="@Url.Action("BuscarEmail", "Usuario")">Olvide mi contraseña</a><br />
                                <a href="@Url.Action("Terminos", "Home")">Ver terminos y condiciones</a>
                            </div>
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
    
    <br />
    <br />
</div>