@model Gysto.Models.Tratamiento
@{
    ViewBag.Title = "Tratamiento";
}
<div class="row">
    <div class="col-sm-12">
        <div>
            <h1>Datos de @ViewBag.nombre</h1>
        </div>
    </div>
</div>
@using (Html.BeginForm())

{
    @Html.HiddenFor(Model => Model.id_tratamiento)
    <div class="row">
        <div class="col-lg-3">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre del tratamiento: </label>
                    <div class="col-sm-1">
                        @Html.TextBoxFor(model => model.nombre, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
                    </div>
                </div>
                <div class="form-group text-right">
                    <div class="col-sm-12">
                        <button class="btn btn-warning" type="submit" name="button" value="Actualizar">
                            Actualizar
                        </button> 
                        <button class="btn btn-danger" type="submit" name="button" value="Eliminar">
                            Eliminar
                        </button>
                    </div>
                </div>

                <div class="form-group text-left">
                    <div class="col-sm-12">
                      
                    </div>
                </div>

            </div>

</div> 
        </div>
}

