@model IEnumerable<Gysto.Models.Tratamiento>
@{
    ViewBag.Title = "Listado";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

<div class=" contenedor">
    <div class="row">
        <div class="col text-right">
            <a href="@Url.Action("Tratamiento", "Auxiliares")" class="btn bg-success text-white"> <i class="bi bi-plus-circle"></i></a>
        </div>
        <div class="col-sm-12">
            <div>
                <h1>
                    TODOS LOS TRATAMIENTOS
                </h1>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped">

                <tbody>
                    @foreach (var t in Model)
                    {
                        if (t.estado == true)
                        {
                            <tr class="text-center">
                                <td>
                                    @t.nombre

                                </td>
                                <td>
                                    <a href="@Url.Action("MTratamientoS", "Auxiliares", new { idTratamiento = t.id_tratamiento })" class=" btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                                    <button class="btn btn-danger" onclick="jsDelete(@t.id_tratamiento)"><i class="bi bi-x-square"></i></button>


                                </td>
                            </tr>
                        }


                    }

                </tbody>
            </table>


        </div>
    </div>
</div>
<script>
    function jsDelete(id) {
                if (confirm("Estas seguro de eliminar")) {
                    url = "@Url.Content("~/Auxiliares/BTratamientos")" + "/" + id;

                    $.post(url, function (data) {
                        if (data == "1") {
                            document.location.href = "@Url.Content("~/Auxiliares/ListadoTratamientos")";
                        }
                        else {
                            alert("ocurrio un problema");
                        }
                    })

                }


    }

</script>
