@model Gysto.Models.Especialidad
@{
    ViewBag.Title = "Especialidades";
}

<div class="container">
    <div class="col-lg-4">
        <h3>Cargar una nueva especialidad</h3>
        @using (Html.BeginForm("MEspecialidad", "Auxiliares", FormMethod.Post, new { enctype = "multipart/form-data" }))

        {
            @Html.HiddenFor(Model => Model.id_especialidad)
            <div class="row">

                <div class="col-lg-3">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Nombre de la especialidad: </label>
                            <div class="col-sm-1">
                                @Html.TextBoxFor(model => model.nombre, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-6 control-label">Subir imagen: </label>
                            <div class="col-sm-1">
                                @Html.TextBoxFor(model => model.imagen, htmlAttributes: new { @class = "form control", @id = "txtNombre", @type = "file" })@ViewBag.imagen
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group text-right">
                    <div class="col-sm-12">
                        <button class="btn btn-primary" type="submit">
                            Cargar
                        </button>
                    </div>
                </div>
            </div>


        }
    </div>
    </div>


