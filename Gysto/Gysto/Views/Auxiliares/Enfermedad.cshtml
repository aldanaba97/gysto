@model Gysto.Models.Enfermedad
@{
    ViewBag.Title = "Enfermedades";
}
<div class="contenedor">
<div class="container">
    <div class="col-lg-4">
        <h3>Cargar una nueva enfermedad</h3>
        @using (Html.BeginForm())

        {
            <div class="row">

                <div class="col-lg-3">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Enfermedad: </label>
                            <div class="col-sm-1">
                                @Html.TextBoxFor(model => model.nombreEnfermedad, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
                            </div>
                        </div>
                        <div class="form-group text-right">
                            <div class="col-sm-12">
                                <button class="btn btn-primary" type="submit">
                                    Cargar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

</div>