@model Gysto.Models.Especialidad
@{
    ViewBag.Title = "Especialidades";
}
<div class="row">
    <div class="col-sm-12">
        <div>
            <h1>Cambiar datos de @ViewBag.nombre</h1>
        </div>
    </div>
</div>
@using (Html.BeginForm())

{
    @Html.HiddenFor(Model => Model.id_especialidad)
    <div class="row">

        <div class="col-lg-3">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre de la especialidad: </label>
                    <div class="col-sm-1">
                        @Html.TextBoxFor(model => model.nombre, htmlAttributes: new { @class = "form control", @id = "txtNombre", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Subir imagen: </label>
                    <div class="col-sm-1">
                        @Html.TextBoxFor(model => model.imagen, htmlAttributes: new { @class = "form control", @id = "txtNombre", @readonly = "readonly", @type= "file"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre de la imagen </label>
                    <div class="col-sm-1">
                        @Html.LabelFor(model => model.imagen, htmlAttributes: new { @class = "form control", @id = "txtNombre", @readonly = "readonly" })
                    </div>
                </div>
               
                <br />
                <div class="form-group text-right">
                    <div class="col-sm-12">
                        <button class="btn btn-primary" type="submit">
                            Actualizar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
