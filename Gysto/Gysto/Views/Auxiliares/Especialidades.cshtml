@model Gysto.Models.Especialidad
@{
    ViewBag.Title = "Especialidades";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

<div class="contenedor">
    <div class="col-lg-12">
        <h3>Cargar una nueva especialidad</h3>
        @using (Html.BeginForm("Especialidades", "Auxiliares", FormMethod.Post, new { enctype = "multipart/form-data" }))

        {
            <div class="row">

                <div class="col-lg-12">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Nombre de la especialidad: </label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.nombre, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-6 control-label">Subir imagen: </label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.imagen, htmlAttributes: new { @class = "form control", @id = "txtNombre", @type = "file" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Nombre de la imagen </label>
                            <div class="col-sm-1">
                                @Html.LabelFor(model => model.imagen, htmlAttributes: new { @class = "form control", @id = "txtNombre", @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="form-group text-right">
                        <div class="col-sm-12">
                            <button class="btn btn-primary" type="submit">
                                Cargar
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

