@model Gysto.Models.Tratamiento
@{
    ViewBag.Title = "Tratamientos";
    @*if (ViewBag.showSuccessAlert)
    {
        <script>
            alert('Los datos se grabaron corectamente');
        </script>
    }*@
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

<script src="https://unpkg.com/ionicons@5.5.1/dist/ionicons.js"></script>
<div class="contenedor">
    <div class="col-lg-12">
        <h3>Cargar un tratamiento</h3>
        @using (Html.BeginForm())

        {
            <div class="row">

                <div class="col-lg-3">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Nombre del tratamiento: </label>
                            <div class="col-sm-1">
                                @Html.TextBoxFor(model => model.nombre, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group text-right">
                            <div class="col-sm-12">
                                <button class="btn btn-primary" type="submit" onclick="">
                                    Cargar
                                </button>
                            </div>
                        </div>
           
                    </div>
                </div>
            </div>
        }
    </div>
</div>

