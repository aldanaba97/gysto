@model Gysto.Models.Enfermedad
@{
    ViewBag.Title = "Enfermedad";
}
<div class="row">
    <div class="col-sm-12">
        <div>
            <h1>Cambiar datos de @ViewBag.nombre</h1>
        </div>
    </div>
</div>
@using (Html.BeginForm())

{
    @Html.HiddenFor(Model => Model.id_enfe)
    <div class="row">
        <div class="col-lg-3">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre de la enfermedad: </label>
                    <div class="col-sm-1">
                        @Html.TextBoxFor(model => model.nombreEnfermedad, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
                    </div>
                </div>            
                <div class="form-group text-right">
                    <div class="col-sm-12">
                        <button class="btn btn-primary" type="submit">
                            Actualizar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>


}

