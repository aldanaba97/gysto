@model Gysto.Models.Enfermero

@{
    ViewBag.Title = "ModificarEnfermero";
}
<div class="contenedor">
<h2>ModificarEnfermero</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Enfermero</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_enfermero)


        <div class="form-group">
            @Html.LabelFor(model => model.matricula, htmlAttributes: new { @class = "control-label col-md-2" })
