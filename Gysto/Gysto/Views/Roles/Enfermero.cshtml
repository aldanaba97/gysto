@model Gysto.Models.Enfermero
@{
    ViewBag.Title = "Enfermero";
}

<div class="container">
    <div class="col-lg-4">
        <h3>Complete para continuar su registro</h3>
        @using (Html.BeginForm())

        {
            <div class="row">

                <div class="col-lg-3">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Matricula </label>
                            <div class="col-sm-1">
                                @Html.TextBoxFor(model => model.matricula, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
                            </div>
                        </div>              
                    </div>
                </div>
                <br />
                <div class="form-group text-right">
                    <div class="col-sm-12">
                        <button class="btn btn-primary" type="submit">
                            Cargar
                        </button>
                    </div>
                </div>
            </div>


        }

    </div>

