@model Gysto.Models.Medico
@{
    ViewBag.Title = "Medico";
    List<SelectListItem> Itemsespe = (List<SelectListItem>)ViewBag.itemsespe;
}

<div class="contenedor">
    <div class="col-lg-4">
        <h3>Editar los datos</h3>
        @using (Html.BeginForm())

        {
            @Html.HiddenFor(model => model.id_medico)
            <div class="row">

                <div class="col-lg-3">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Matricula </label>
                            <div class="col-sm-1">
                                @Html.TextBoxFor(model => model.matricula, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Especialidad  </label>
                            <div class="col-sm-6">
                                @Html.DropDownList("id_espe", Itemsespe, "Seleccione especialidad", htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group text-right">
                    <div class="col-sm-12">
                        <button class="btn btn-primary" type="submit">
                            Cargar
                        </button>
                    </div>
                </div>
            </div>


        }

    </div>

</div>
