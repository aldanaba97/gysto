<!DOCTYPE html>
    <html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
       
    </head>
   
    <body>
        <div class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container ">
                <a class="navbar-brand" href="">GYSTO</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (Session["user"] != null)
                        {
                            string o = Session["Rol"].ToString();

                            switch (o)
                            {
                                case "1":
                                    <ul class="navbar-nav ml-auto">


                                        <li class="nav-item active"><a class="nav-link" href=@Url.Action("ListadoConsultasxMedico", "Transacciones", new { User.Identity.Name })>Consultas</a></li>

                                        <li class="nav-item active"><a class="nav-link" href=@Url.Action("PerfilUsuarioMedico", "Roles", new { User.Identity.Name })>Ver perfil</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout", "Home")">Cerrar sesion</a></li>
                                    </ul>
                                    break;
                                case "2":
                                    <ul class="navbar-nav ml-auto">
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Enfermedadxcantidad", "Reporte")">Reportes</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("ListadoHC", "Transacciones")">Historia clinica</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("PerfilUsuarioDirector", "Roles" , new { User.Identity.Name })">Ver perfil</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout", "Home")">Cerrar sesion</a></li>
                                    </ul>
                                    break;
                                case "3":
                                    <ul class="navbar-nav ml-auto">
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("ListadoTurno", "Transacciones")">Turnos</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("ListadoConsultas", "Transacciones")">Consultas</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("ListadoInternacion", "Transacciones")">Internaciones</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("ListadoHC", "Transacciones")">Historia clinica</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("PerfilUsuarioAdministrativo", "Roles" , new { User.Identity.Name })">Ver perfil</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout", "Home")">Cerrar sesion</a></li>


                                    </ul>
                                    break;
                                case "4":
                                    <ul class="navbar-nav ml-auto">
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("ListadoUsuario", "Usuario")">Usuarios</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Especialidades", "ListadoEspecialidad", "Auxiliares")">Especialidades</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("ListadoTratamientos", "Auxiliares")">Tratamientos</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("listadoEnfermedad", "Auxiliares")">Enfermedades</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("PerfilUsuario", "Usuario")">Ver perfil</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action( "Logout", "Home")">Cerrar Sesion</a></li>
                                    </ul>
                                    break;
                                case "5":
                                    <ul class="navbar-nav ml-auto">
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("ListadoUsuario", "Usuario")">Internaciones</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("PerfilUsuarioEnfermero", "Roles" , new { User.Identity.Name })">Ver perfil</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout", "Home")">Cerrar sesion</a></li>
                                    </ul>
                                    break;
                            }
                        }
                    }
                    else
                    {
                        <ul class="navbar-nav ml-auto">

                            <li class="nav-item"><a class="nav-link" href="@Url.Action("TodosTurnos", "Transacciones")">Turnos disponibles</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("ListadoEspecialidad", "Auxiliares")">Especialidades</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Contact", "Home")">Contacto</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Terminos", "Home")">Terminos y condiciones</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Home")">Iniciar sesion</a></li>

                        </ul>

                    }



                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody() 
            <br />
            <footer>
                <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
            </footer>
            <hr />

        </div>
       
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
    </html>
