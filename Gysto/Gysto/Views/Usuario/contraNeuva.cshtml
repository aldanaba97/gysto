@model Gysto.ViewModels.ViewModelContraseña

@{
    ViewBag.Title = "contraNeuva";
}


    <div class="contenedor">
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>MODIFICAR CONTRASEÑA</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.token)
                <div class="form-group">
                    Contraseña:
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.contra1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.contra1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Contraseña nueva:
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.contra2, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.contra2, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Cambiar contraseña" class="btn btn-dark" />
                    </div>
                </div>



            </div>




        }
        <br />
    </div>

 