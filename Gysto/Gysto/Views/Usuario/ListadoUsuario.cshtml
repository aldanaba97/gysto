@model IEnumerable<Gysto.ViewModels.listado>
@{
    ViewBag.Title = "Listado";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

<div class=" contenedor">
    <br />
    <div class="row">


        <div class="col">
            <h3>
                TODAS LOS USUARIOS
            </h3>
        </div>
        <div class="col text-right">
            <a href="@Url.Action("Usuario", "Usuario")" class="btn bg-success text-white"> <i class="bi bi-plus-circle"></i></a>
        </div>

    </div>

    <br />
    <div class="row">
        <div class="col-sm-12">
            <table class="table">
                <thead class="table-dark">
                    <tr class="text-center">
                        <td>Nombre completo</td>
                        <td>Email</td>
                        <td>Nombre de usuario</td>
                        <td></td>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {

                        if (t.estado == true)
                        {
                            <tr class="text-center">
                                <td>
                                    @t.nombreCompleto

                                </td>
                                <td>
                                    @t.email
                                </td>
                                <td>
                                    @t.usuario
                                </td>
                                <td>
                                  
                                    <button class="btn btn-danger" onclick="jsDelete(@t.id)"><i class="bi bi-x-square"></i></button>
                                </td>
                            </tr>

                        }

                    }

                </tbody>
            </table>


        </div>
    </div>
</div>
<script src="https://unpkg.com/ionicons@5.4.0/dist/ionicons.js"></script>

<script>
    function jsDelete(id) {
                if (confirm("Estas seguro de eliminar")) {
                    url = "@Url.Content("~/Usuario/BUsuario")" + "/" + id;

                    $.post(url, function (data) {
                        if (data == "1") {
                            document.location.href = "@Url.Content("~/Usuario/ListadoUsuario")";
                        }
                        else {
                            alert("ocurrio un problema");
                        }
                    })

                }


    }

</script>
