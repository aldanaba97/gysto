@model Gysto.Models.Usuarios
@{
    ViewBag.Title = "Email usuario";

}
<div class=" contenedor">
    <br />
    <div class="row">
        <div class="col-sm-12">
            <div>
                <h1>INGRESE SU MAIL </h1>
                <p>En el caso de que no aparezca su mail comuniquese con el hospital</p>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("RecuperarContraxEmail", "Usuario", FormMethod.Get))

    {
      
<div class="row">
    <div class="col-lg-6">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-6 control-label">Email: </label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(model => model.email, htmlAttributes: new { @class = "form-control", @id = "txtNombre" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-6">
                    <button class="btn btn-primary" type="submit" name="button" onclick="Mandar()">
                        Enviar
                    </button>

                </div>
            </div>
        </div>
    </div>
    </div>

    }
</div>
