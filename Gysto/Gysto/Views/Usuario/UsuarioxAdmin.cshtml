@model Gysto.ViewModels.CrearPaciente
@{
    ViewBag.Title = "Alta usuario";

    List<SelectListItem> Itemsloc = (List<SelectListItem>)ViewBag.itemsloc;
    List<SelectListItem> Itemsdni = (List<SelectListItem>)ViewBag.itemsdni;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

<div class=" contenedor">
    <div class="row">
        <div class="col-sm-12">
            <div>
                <h3>CREAR UN PACIENTE </h3>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())

    {
        <div class="row">
            <div class="col-lg-6">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Email: </label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.email, htmlAttributes: new { @class = "form-control", @type = "email", @id = "txtTelefono" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Nombre completo: </label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.nombre, htmlAttributes: new { @class = "form-control", @id = "txtNombre" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Apellido: </label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.apellido, htmlAttributes: new { @class = "form-control", @id = "txtApellido" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-6 control-label">Tipo de DNI:   </label>
                        <div class="col-sm-6">
                            @Html.DropDownList("id_dni", Itemsdni, "Seleccione un tipo", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Numero de DNI: </label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.dni, htmlAttributes: new { @class = "form-control", @id = "txtApellido" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Fecha de nacimiento: </label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.fecha_nac, htmlAttributes: new { @class = "form-control", @id = "txtApellido", @type = "date" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Direccion: </label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.direccion, htmlAttributes: new { @class = "form-control", @id = "txtApellido" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Localidad:   </label>
                        <div class="col-sm-6">
                            @Html.DropDownList("localidad", Itemsloc, "Seleccione...", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <label class="col-sm-6 control-label">Telefono : </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.telefono, htmlAttributes: new { @class = "form-control", @id = "txtTelefono" })
                    </div>

                    <div class="form-group text-right">
                        <div class="col-sm-12">
                            <button class="btn btn-primary" type="submit" data-bs-toggle="modal" data-bs-target="#lolo">
                                Guardar
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>


    }

</div>