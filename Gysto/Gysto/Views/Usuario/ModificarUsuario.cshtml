@model Gysto.Models.Persona
@{
    ViewBag.Title = "Modificacion usuario";
    List<SelectListItem> Itemsrol = (List<SelectListItem>)ViewBag.itemsrol;
    List<SelectListItem> Itemsloc = (List<SelectListItem>)ViewBag.itemsloc;
    List<SelectListItem> Itemsdni = (List<SelectListItem>)ViewBag.itemsdni;
}

<div class="row">
    <div class="col-sm-12">
        <div>
            <h1>Crear un nuevo usuario </h1>
        </div>
    </div>
</div>
@using (Html.BeginForm("ModificarUsuario", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    @Html.HiddenFor(model => model.id_persona)
    @Html.HiddenFor(model => model.id)
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre de usuario: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.nombreUsuario, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Contraseña: </label>
                    <div class="col-sm-6">
                        @Html.PasswordFor(model => model.contraseña, htmlAttributes: new { @class = "form control", @id = "txtApellido" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Rol  </label>
                    <div class="col-sm-6">
                        @*@Html.DropDownList("rol", Itemsrol, "Seleccione un rol", htmlAttributes: new { @class = "form-control" })*@
                        @Html.TextBoxFor(model => model.rol, htmlAttributes: new { @class = "form control", @id = "txtNombre" })

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Email: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.email, htmlAttributes: new { @class = "form control", @type = "email", @id = "txtTelefono" })
                    </div>
                </div>
                @*<div class="form-group">
                    <label class="col-sm-6 control-label">Imagen: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.image, htmlAttributes: new { @class = "form control", @type = "file", @name = "imagenUsuario" }) @ViewBag.imagen 
                    </div>
                </div>*@
                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre completo: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.nombre, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Apellido: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.apellido, htmlAttributes: new { @class = "form control", @id = "txtApellido" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-6 control-label">Tipo de DNI:   </label>
                    <div class="col-sm-6">
                        @*@Html.DropDownList("id_dni", Itemsdni, "Seleccione un tipo", htmlAttributes: new { @class = "form-control" })*@
                        @Html.TextBoxFor(model => model.id_dni, htmlAttributes: new { @class = "form control", @id = "txtNombre" })

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Numero de DNI: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.dni, htmlAttributes: new { @class = "form control", @id = "txtApellido" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Fecha de nacimiento: </label>
                    <div class="col-sm-6">
                        @Html.EditorFor(model => model.fecha_nac, new { htmlAttributes = new { @class = "form control", @id = "txtApellido", @type = "date" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Direccion: </label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.direccion, htmlAttributes: new { @class = "form control", @id = "txtApellido" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Localidad:   </label>
                    <div class="col-sm-6">
                        @*@Html.DropDownList("localidad", Itemsloc, "Seleccione...", htmlAttributes: new { @class = "form-control" })*@
                        @Html.TextBoxFor(model => model.localidad, htmlAttributes: new { @class = "form control", @id = "txtNombre" })

                    </div>
                </div>
                <label class="col-sm-6 control-label">Telefono : </label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(model => model.telefono, htmlAttributes: new { @class = "form control", @id = "txtTelefono" })
                </div>

                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-primary" type="submit" name="button" value="actualizar">
                            Guardar
                        </button>
                        <button class="btn btn-danger" type="submit" name="button" value="Eliminar">
                            Eliminar
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>


}
