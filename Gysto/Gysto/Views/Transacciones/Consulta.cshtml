        <div class="col-sm-12">
            <div>
                <h3>CREAR UNA CONSULTA</h3>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())

    {
        <div class="row">
            <div class="col-lg-6">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-6 control-label"> Administrativo:  </label>
                        <div class="col-sm-6">
                            @Html.DropDownList("id_administracion", ItemsAdministracion, "Seleccione administrativo", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label"> Paciente:  </label>
                        <div class="col-sm-6">
                            @Html.DropDownList("id_paciente", ItemsPaciente, "Seleccione un paciente", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Prediagnostico: </label>
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.prediagnostico, new { htmlAttributes = new { @class = "form-control", @id = "txtApellido" } })

                        </div>
                    </div>
                    @*<div class="form-group">
                            <label class="col-sm-6 control-label">Diagnostico: </label>
