                                @Html.EditorFor(model => model.diagnostico, new { htmlAttributes = new { @class = "form control", @id = "txtApellido" } })

                            </div>
                        </div>*@
                    @*<div class="form-group">
                            <label class="col-sm-6 control-label">Observacion: </label>
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.observaciones, new { htmlAttributes = new { @class = "form control", @id = "txtApellido" } })

                            </div>
                        </div>*@

                    @*<div class="form-group">
                            <label class="col-sm-6 control-label"> Tratamiento:  </label>
                            <div class="col-sm-6">
                                @Html.DropDownList("tratamiento", ItemsTratamiento, "Seleccione un rol", htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>*@
                    <div class="form-group">
                        <label class="col-sm-6 control-label"> Medico:  </label>
                        <div class="col-sm-6">
                            @Html.DropDownList("medico", ItemsMedico, "Seleccione...", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group text-left">
                        <div class="col-sm-6">
                            <button class="btn btn-primary" type="submit">
                                Guardar
