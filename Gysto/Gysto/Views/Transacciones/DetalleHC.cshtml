@model Gysto.Models.detalleHistoriaClinica

@{
    ViewBag.Title = "DetalleHC";
    List<SelectListItem> ItemsEnfermedad = (List<SelectListItem>)ViewBag.itemsE;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

<div class=" contenedor">

<br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>DETALLES PATOLOGICOS</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <label class="col-sm-6 control-label"> Alergia:  </label>
            <div class="col-md-10">
                <label> Si @Html.RadioButtonFor(model => model.alergia, true, new { htmlAttributes = new { @class = "form-control" } }) </label>
                <label> No @Html.RadioButtonFor(model => model.alergia, false, new { htmlAttributes = new { @class = "form-control" } }) </label>
            </div>

            @Html.ValidationMessageFor(model => model.alergia, "", new { @class = "text-danger" })
        </div>
            </div>
        <div class="form-group">
            <label class="col-sm-6 control-label"> ¿Cual?  </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.detalle_alergia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-6 control-label">Enfermedad:  </label>
            <div class="col-md-10">
                @Html.DropDownList("enfermedades", ItemsEnfermedad, "Seleccione.....", htmlAttributes: new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-6 control-label"> Observaciones:  </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.observaciones, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })
            </div>
        </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Agregar Enfermedad" class="btn btn-primary" />
                        </div>
                    </div>

              
           
            }

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a href="@Url.Action("Index2", "Home")" class="btn btn-dark"><i class="bi bi-arrow-left-square"></i> Volver</a>
                </div>
            </div>
    <br />

    
</div>