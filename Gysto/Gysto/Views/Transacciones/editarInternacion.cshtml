@model Gysto.Models.internacion
@{
    ViewBag.Title = "Editar internacion";
    List<SelectListItem> ItemsEnfermero = (List<SelectListItem>)ViewBag.items;
    List<SelectListItem> ItemsPaciente = (List<SelectListItem>)ViewBag.item;


}
<div class=" contenedor">


<div class="row">
    <div class="col-sm-12">
        <div>
            <h1>Editar internacion de @ViewBag.nombre </h1>
        </div>
    </div>
</div>
@using (Html.BeginForm())

{
    @Html.HiddenFor(model => model.id_internacion)
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Motivo: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.motivo, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Fecha de ingreso: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.fecha_ingreso, htmlAttributes: new { @class = "form control", @id = "txtApellido", @type = "date" })
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-6 control-label">Temperatura: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.temperatura, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Tension: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.tension, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Frecuencia cardiaca: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.frecuencia_c, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Frecuencia respiratoria: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.frecuencia_respiratoria, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-6 control-label">Enfermero </label>
                    <div class="col-sm-6">
                        @Html.DropDownList("enfermero", ItemsEnfermero, "Seleccione un rol", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Enfermero </label>
                    <div class="col-sm-6">
                        @Html.DropDownList("paciente", ItemsPaciente, "Seleccione un rol", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-success" type="submit" name="button">
                            Actualizar
                        </button>
                    </div>

                </div>
                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-danger" type="submit" name="button">
                            Eliminar
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>


}
</div>



