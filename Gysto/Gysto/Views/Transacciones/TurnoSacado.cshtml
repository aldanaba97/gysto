@model Gysto.ViewModels.SacarTurno
@{
    ViewBag.Title = "Listado";
}
    <div class=" contenedor">
        <div class="row">
            <div class="col-sm-12">
                <div>
                    <h1>
                        Turnos
                    </h1>
                </div>
            </div>
        </div>


        @using (Html.BeginForm("DatosxDNI", "Transacciones", FormMethod.Get))
        {
            @Html.HiddenFor(model => model.turno.id_turno)
            <div class="col-md-6">
                <p>Ingrese su dni</p>
                @Html.TextBoxFor(model => model.p.dni, htmlAttributes: new { @class = "form control", @id = "txtNombre" })
            </div>
            <div class="col-md-6">
                <div class="col-lg-6">
                    <button class="btn btn-primary" type="submit">
                        Buscar
                    </button>
                </div>

            </div>
        }
    </div>

