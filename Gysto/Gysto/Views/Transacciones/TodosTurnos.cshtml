@model IEnumerable<Gysto.ViewModels.TurnoMedico>
@{
    ViewBag.Title = "Listado";
    List<SelectListItem> Itemsespe = (List<SelectListItem>)ViewBag.itemsespe;

}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>


<div class="contenedor">

    @using (Html.BeginForm())
    {
        <br />
        <h3>BUSCAR TURNOS</h3>
        <i class="fab fa-amazon-pay"></i>
        <i class="fas fa-check"></i>
        <i class="far fa-hand-pointer"></i>

        <div class=" row">
            <div class="col-lg-3">
                <h6> <input type="text" readonly class="form-control-plaintext" id="staticEmail2" value="Seleccione una especialidad"></h6>
            </div>
            <div class="col-lg-3">

                @Html.DropDownList("id_espe", Itemsespe, "Seleccione especialidad", htmlAttributes: new { @class = "form-control" })

            </div>
            <div class="col-auto">
                <button class="btn btn-dark" type="submit">
                    Buscar
                </button>
            </div>
        </div>
    }
    <br />
    <div class="row">
        <div class="col-sm-12">
            <div>
                <h4>
                    TODOS LOS TURNOS DISPONIBLES
                </h4>
            </div>
        </div>
    </div>
    <div class="container">
        <i class="far fa-calendar-check"></i>
        <table class="table table-light table-borderless">
            <thead>
                <tr>

                    <th scope="col">Fecha</th>
                    <th scope="col">Hora</th>
                    <th scope="col">Medico</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    if (i.disponibilidad == false)
                    {


                        <tr class="table-success">

                            <td>@i.fecha2()</td>
                            <td>@i.hora2()</td>
                            <td>@i.apellido @i.nombre</td>

                            <td> <a href="@Url.Action("TurnoSacado", "Transacciones" , new { idTurno= i.id_turno })">  <i class="bi bi-check2-square" style="font-size: 30px; color: black;"></i> </a></td>
                        </tr>


                        @*<div class="col-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@i.apellido , @i.nombre</h5>
                                    <p class="card-text">@i.fecha2() -  @i.hora2()</p>
                                    <a href="@Url.Action("TurnoSacado", "Transacciones" , new { idTurno= i.id_turno })" class="btn btn-success">Seleccionar</a>




                                </div>*@




                    }
                    else
                    {

                        <tr class="table-danger">

                            <td>@i.fecha2()</td>
                            <td>@i.hora2()</td>
                            <td>@i.apellido @i.nombre</td>
                            <td>No disponible</td>
                        </tr>



                    }

                }
            </tbody>
        </table>
        <br />
    </div>
</div>

