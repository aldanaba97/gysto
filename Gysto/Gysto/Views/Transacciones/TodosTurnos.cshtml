@model IEnumerable<Gysto.Models.turno>
    @{
    ViewBag.Title = "Listado";
    List<SelectListItem>
        ItemsMedico = (List<SelectListItem>
            )ViewBag.items;

            }

            <div class="row">
                <div class="col-sm-12">
                    <div>
                        <h1>
                            Turnos
                        </h1>
                    </div>
                </div>
            </div>


            @using (Html.BeginForm())
            {
            <div class="col-md-6">
                @Html.DropDownList("medico", ItemsMedico, "Seleccione un rol", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                <div class="col-lg-6">
                    <button class="btn btn-primary" type="submit">
                        Buscar
                    </button>
                </div>

            </div>
            }

            <div class="row">
                <div class="col-sm-12">
                    <div>
                        <h2>
                            Turnos
                        </h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <table class="table table-dark table-striped">

                        <tbody>
                            @foreach (var i in Model)
                            {
                            if (i.disponibilidad == false)
                            {
                            <tr class="text-center" style="background-color:red">

                                <td class="">
                                    @i.hora

                                </td>
                                <td>
                                    @i.fecha
                                </td>
                                <td>
                                    <a href="@Url.Action(" SacarTurno", "Transacciones" , new { idTurno=i.id_turno })">  Seleccionar  </a>|
                                </td>

                            </tr>
                            }
                            else
                            {
                            <tr style="background-color: springgreen" class="text-center">

                                <td>
                                    @i.hora

                                </td>
                                <td>
                                    @i.fecha
                                </td>
                                <td>
                                    <a href="@Url.Action(" SacarTurno", "Transacciones" , new { idTurno=i.id_turno })">  Seleccionar  </a>|

                                </td>

                            </tr>

                            }

                            }



                        </tbody>
                    </table>


                </div>
            </div>



