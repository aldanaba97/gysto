@model Gysto.Models.turno

@{
    ViewBag.Title = "obtenerTurno";
    ViewBag.Title = "Alta turno";
    List<SelectListItem>
    ItemsMedico = (List<SelectListItem>
        )ViewBag.items;

}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

<div class="contenedor">
    <br />
    <h3>MODIFICAR TURNO</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h5>DATOS DEL TURNO</h5>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id_turno)

    <div class="form-group">
        <label class="col-sm-6 control-label">Fecha: </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-6 control-label">Hora: </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.hora, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.hora, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-6 control-label"> Medico:  </label>
        <div class="col-sm-6">
            @Html.DropDownList("medico", ItemsMedico, "Seleccione un rol", htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(model => model.paciente)

    <div class="form-group">
        <label class="col-sm-6 control-label">Disponible: </label>
        <div class="col-md-10">
            <div class="checkbox">
                Si   @Html.EditorFor(model => model.disponibilidad)
                @Html.ValidationMessageFor(model => model.disponibilidad, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-dark" /><br />

        </div>
    </div>
    <a href="@Url.Action("ListadoTurno", "Transacciones")" class="btn btn-dark"><i class="bi bi-arrow-left-square"></i> Volver</a>
</div>
        <br />
    }

   
</div>