@model Gysto.Models.turno
@{
    ViewBag.Title = "Alta turno";
    List<SelectListItem>
    ItemsMedico = (List<SelectListItem>
        )ViewBag.items;



}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

<div class=" contenedor">
    <br />
    <div class="row">
        <div class="col-sm-12">
            <div>
                <h2>CREAR TURNO</h2>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())

    {
        <div class="row">
            <div class="col-lg-12">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Fecha: </label>
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", @id = "txtApellido", @type = "date" } })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Hora: </label>
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.hora, new { htmlAttributes = new { @class = "form-control", @id = "txtApellido", @type = "time" } })

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-6 control-label"> Medico:  </label>
                        <div class="col-sm-6">
                            @Html.DropDownList("medico", ItemsMedico, "Seleccione un rol", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group text-left">
                        <div class="col-sm-6">
                            <button class="btn btn-dark" type="submit">
                                Guardar
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>


    }





</div>