@model Gysto.Models.turno
@{
    ViewBag.Title = "Alta turno";
    List<SelectListItem>
    ItemsMedico = (List<SelectListItem>
        )ViewBag.items;



        }

        <div class="row">
            <div class="col-sm-12">
                <div>
                    <h1>Crear un turno </h1>
                </div>
            </div>
        </div>
        @using (Html.BeginForm())

        {
        <div class="row">
            <div class="col-lg-6">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Fecha: </label>
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form control", @id = "txtApellido", @type = "date" } })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Hora: </label>
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.hora, new { htmlAttributes = new { @class = "form control", @id = "txtApellido", @type = "time" } })

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-6 control-label"> Medico:  </label>
                        <div class="col-sm-6">
                            @Html.DropDownList("medico", ItemsMedico, "Seleccione un rol", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group text-right">
                        <div class="col-xs-12">
                            <button class="btn btn-primary" type="submit">
                                Guardar
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        }





