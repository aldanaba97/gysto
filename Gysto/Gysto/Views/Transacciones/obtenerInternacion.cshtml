@model Gysto.Models.internacion
@{
    ViewBag.Title = "Alta internacion";
    

}

<div class="row">
    <div class="col-sm-12">
        <div>
            <h1>Alta medica </h1>
        </div>
    </div>
</div>
@using (Html.BeginForm())

{
    @Html.HiddenFor(model => model.id_internacion); 
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
               
                <div class="form-group">
                    <label class="col-sm-6 control-label">Fecha de alta: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.fecha_egreso, htmlAttributes: new { @class = "form control", @id = "txtApellido", @type = "date" })
                    </div>
                </div>
                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-primary" type="submit">
                            Guardar
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>


}



