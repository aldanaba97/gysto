@model Gysto.Models.internacion
@{
    ViewBag.Title = "Alta internacion";
    List<SelectListItem> ItemsEnfermero = (List<SelectListItem>)ViewBag.items;
    List<SelectListItem> ItemsPaciente = (List<SelectListItem>)ViewBag.item;


}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

<div class=" contenedor">

    <br />
    <div class="row">
        <div class="col-sm-12">
            <div>
                <h3>NUEVA INTERNACION </h3>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())

    {
        <div class="row">
            <div class="col-lg-12">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Motivo: </label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.motivo, htmlAttributes: new { @class = "form-control", @id = "txtNombre" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Fecha de ingreso: </label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.fecha_ingreso, htmlAttributes: new { @class = "form-control", @id = "txtApellido", @type = "date" })
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-6 control-label">Temperatura: </label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.temperatura, htmlAttributes: new { @class = "form-control", @id = "txtNombre" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Tension: </label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.tension, htmlAttributes: new { @class = "form-control", @id = "txtNombre" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Frecuencia cardiaca: </label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.frecuencia_c, htmlAttributes: new { @class = "form-control", @id = "txtNombre" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Frecuencia respiratoria: </label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.frecuencia_respiratoria, htmlAttributes: new { @class = "form-control", @id = "txtNombre" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-6 control-label">Enfermero </label>
                        <div class="col-sm-6">
                            @Html.DropDownList("enfermero", ItemsEnfermero, "Seleccione...", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Paciente </label>
                        <div class="col-sm-6">
                            @Html.DropDownList("paciente", ItemsPaciente, "Seleccione...", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group text-left">
                        <div class="col-sm-12">
                            <button class="btn btn-dark" type="submit">
                                Guardar
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>


    }



</div>